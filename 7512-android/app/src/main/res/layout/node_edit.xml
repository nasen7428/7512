<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="添加输入"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_add_input"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView_title" android:layout_weight="1"/>
        <TextView
                android:text="详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView_detial" android:layout_weight="1"/>
        <Button
                android:text="编辑"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_edit_text" />
    </LinearLayout>
    <Button
            android:text="添加输出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_add_output" />
</LinearLayout>